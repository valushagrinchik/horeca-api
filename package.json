{
    "name": "horeca-api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "docker": "docker compose up --build -d ",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:prod": "node dist/src/main",
        "start:migrate:prod": "pnpm exec prisma migrate deploy && dotenvx run -- pnpm exec prisma db seed && dotenvx run -- pnpm start:prod",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "migration:create": "pnpm exec prisma migrate dev --name",
        "migrate:dev": "pnpm exec prisma migrate dev",
        "migrate:prod": "pnpm exec prisma migrate deploy && pnpm exec prisma generate",
        "migrate:reset": "pnpm exec prisma migrate reset",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:docker:restart": "pnpm exec docker compose -f docker-compose.test.yml down && pnpm exec docker compose -f docker-compose.test.yml up -d",
        "test:db:seed": "dotenvx run -f .env.test -- pnpm exec prisma db seed -- --environment test",
        "test:db:migrate": "dotenvx run -f .env.test -- pnpm migrate:prod",
        "test:db:prepare": "pnpm test:docker:restart && pnpm test:db:migrate && pnpm test:db:seed",
        "test": "pnpm test:db:prepare && dotenvx run -f .env.test -- jest -i",
        "test:e2e": "pnpm test:db:prepare && dotenvx run -f .env.test -- jest --config ./test/jest-e2e.json --runInBand"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.13.2",
        "@nestjs-modules/mailer": "2.0.2",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.9",
        "@nestjs/platform-socket.io": "^10.4.1",
        "@nestjs/platform-ws": "^10.4.1",
        "@nestjs/schedule": "^4.0.2",
        "@nestjs/swagger": "^7.3.1",
        "@nestjs/websockets": "^10.3.10",
        "@prisma/client": "^5.14.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.5",
        "hbs": "^4.2.0",
        "lodash": "^4.17.21",
        "nodemailer": "^6.9.13",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.7.5",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.3.9",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/lodash": "^4.17.4",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.15",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "prisma": "^5.14.0",
        "source-map-support": "^0.5.21",
        "supertest": "7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.5.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "seed": "ts-node --transpile-only prisma/seed.ts"
    }
}
